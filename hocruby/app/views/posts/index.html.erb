<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>
<ul>
  <% @posts.each do |post| %>
    <li>
      <%= link_to post.title, post_path(post) %> 
      <%= link_to 'Xóa', post_path(post), method: :delete, data: { confirm: 'Bạn có chắc chắn muốn xóa bài viết này?' } %>
    </li>
  <% end %>
</ul>